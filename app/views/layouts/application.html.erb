<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<nav class="userinfo">
<div class="title">
<% if current_user %>

<%= link_to "HOME", restaurants_url %>
<% else %>
<%= link_to "HOME", frontpage_index_url %>
<% end %>
</div>


<div class="login">
      <% if current_user %>
        Signed in as <%= current_user.name %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
        <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
      <% end %>
    </div>
</nav>
<body>
<% if flash[:notice] %>
    <script>
      alert("<%= flash[:notice] %>");
    </script>
<% end %>
<% if flash[:alert] %>
    <script>
      alert("<%= flash[:alert] %>");
    </script>
<% end %>

<%= yield %>

<footer>

</footer>  

</body>
</html>
