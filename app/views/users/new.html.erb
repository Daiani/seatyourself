<h1>Add a User</h1>

<form class="reservation">
<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
   <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email %>
  </div>
   <div class="field">
    <%= f.label :phone_number %><br/>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="actions"><%= f.submit %></div>
<% end %>
</form>