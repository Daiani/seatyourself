<p class:
>
  <b>Name:</b>
  <%= @restaurant.name %>
</p>

<p>
  <b>Category:</b>
  <%= @restaurant.category %>
</p>

<p>
  <b>Price Range:</b>
  <%= @restaurant.price_range %>
  
</p>
<p>
<b>Address:</b>
	<%= @restaurant.address %>
	</p>
<p>
<b>Capacity:</b>
	<%= @restaurant.capacity %>

</p>
<p>
<b>Opening Hour:</b>
	<%= @restaurant.opening_hour %>
</p>
<p>
<b>Closing Hour:</b>
	<%= @restaurant.closing_hour %>
</p>


<h3>Reservation Request for <%= @restaurant.name %></h3>








<%= form_for [@restaurant, @reservation], html: {class: 'reservation'} do |f| %>
  <%= f.label :party_size %>
  <%= f.number_field :party_size, value: 2 %>
  <br/>  
  <br/>
  <%= f.label :date %>
  <%= f.date_field :date %></br>
  <br/>
  <%= f.label :time %>
  <%= f.time_field :time %></br>
  <br/>
  <%= f.submit class: "btn btn-large btn-success" %>

  </form>
  <% end %>
  <br/>


<div class="buttons">
  <% if current_user %>
  <button><%= link_to "Edit", edit_restaurant_path(@restaurant) %></button> | <button><%= link_to "Delete", @restaurant, method: :delete, data: {confirm: "Are you sure you want to delete this restaurant?"} %></button>
<% end %>
</div>
</p>
<p><%= link_to "Back to Restaurants", restaurants_url %></p>