<h1>SEAT YOURSELF!</h1>

<h2>Select a Restaurant</h2>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant.id) do %>
      <h2>
        <%= number_to_currency(restaurant.price_range) %>
        <br/><%= restaurant.name %>
      </h2>
    <% end %>
    <p><%= restaurant.category %></p>
  <% end %>
</div>
<p><%= link_to 'New Restaurant', new_restaurant_path %>
</p>